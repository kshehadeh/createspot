{
  "name": "createspot-monorepo",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "help:dev": "bun run --cwd apps/help dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "validate": "turbo run validate && bun run knip",
    "clean": "turbo daemon clean && rm -rf .turbo apps/*/.turbo packages/*/.turbo",
    "format": "biome format --write .",
    "knip": "knip"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "knip": "^5.82.1",
    "turbo": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
